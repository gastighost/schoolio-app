<div class="container">
<%= simple_form_for [ @booking, @review ] do |f| %>
  <%= f.input :rating %>
  <%= f.input :comment %>
  <%= f.submit "Edit review", class: "button_green_move_down" %>
<% end %>
<br>
<%= link_to 'Go back to booking', booking_path(@booking), class: "button_green_move_down" %>
</div>
