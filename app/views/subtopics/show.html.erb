<div class="each-booking-container">
<h1><%= @subtopic.description %></h1>

<% if current_user.user_type == "teacher" %>
<%= link_to 'Edit subtopic', edit_course_subtopic_path(@course, @subtopic), class: "button_green" %>
<%= link_to "Delete subtopic",
                subtopic_path(@subtopic),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "button_green" %>
<% end %>

<br>
<h2>Lesson Schedule</h2>
<% if current_user.user_type == "teacher" %>
<%= link_to "Add a lesson", new_course_subtopic_lesson_path(@course, @subtopic), class: "button_green" %>
<% end %>
<% @subtopic.lessons.each do |lesson| %>
<p><%= link_to lesson.date.strftime("%d %B %Y (%A)"), course_subtopic_lesson_path(@course, @subtopic, lesson)%></p>
<p>Time: <%= lesson.time.strftime("%H:%M") %></p>
<p>Duration: <%= lesson.duration %> mins</p>
<p>Max Capacity: <%= lesson.max_capacity %></p>
<% end %>
</div>

<%= link_to "Go back to course", course_path(@course), class: "button_green" %>
