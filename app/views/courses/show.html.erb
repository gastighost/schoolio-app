<div class="container mt-4">
<h1>Your course</h1>

<div class="container my-2">
<h2><%= @course.subject %></h2>
<p><strong>Topic:</strong> <%= @course.topic %></p>
<p><strong>School Year:</strong> <%= @course.school_year %></p>
<p><strong>Performance Level Required:</strong> <%= @course.performance_level %></p>
</div>

<div class="container mb-4">
<h3>Course Subtopics</h3>
<%= link_to "Add a subtopic", new_course_subtopic_path(@course), class: "btn btn-primary" %>
<% @course.subtopics.each do |subtopic| %>
<div class="container my-3 border p-2">
<h4><%= link_to subtopic.description, course_subtopic_path(@course, subtopic), class: "text-decoration-none" %></h4>
<%= link_to 'Edit', edit_course_subtopic_path(@course, subtopic), class: "btn btn-warning" %>
<%= link_to "Delete Subtopic",
                subtopic_path(subtopic),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger" %>
</div>
<% end %>
</div>

<div class="container">
<%= link_to "Go back to course list", courses_path, class: "text-decoration-none" %>
<%= link_to 'Edit Course', edit_course_path(@course), class: "text-decoration-none" %>
<%= link_to "Delete Course",
                course_path(@course),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "text-decoration-none" %>
</div>
</div>
