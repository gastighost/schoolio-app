<div class="container mt-4">

<div class="card-img" style="background-image: url('https://images.unsplash.com/photo-1453733190371-0a9bedd82893?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2874&q=80')">
  <h1><%=@course.subject %></h1>
  <ul>
    <li><strong>Topic:</strong> <%= @course.topic %></li>
    <li><strong>School Year:</strong> <%= @course.school_year %></li>
    <li><strong>Performance Level Req:</strong> <%= @course.performance_level %></li>
  </ul>
</div>



<div class="list_links_course_subtopics">
  <h3>Course Subtopics</h3>
  <% if current_user.user_type == "teacher" %>
  <%= link_to "Add a subtopic", new_course_subtopic_path(@course), class: "button_yellow" %>
  <% end %>
  <% @course.subtopics.each do |subtopic| %>
  <br>

  <div class="button_list_grey">
    <h4><%= link_to subtopic.description, course_subtopic_path(@course, subtopic), class: "text-decoration-none" %></h4>
    <div class="buttons">
    <% if current_user.user_type == "teacher" %>
    <%= link_to 'Edit', edit_course_subtopic_path(@course, subtopic), class: "button_green" %>
    <%= link_to "Delete",
                    subtopic_path(subtopic),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "button_green" %>
    <% end %>
    </div>
    </div>
    <% end %>

    <br>
  </div>
</div>

<br>
<div class="container">
  <%= link_to "all courses", courses_path, class: "button_green" %>
  <% if current_user.user_type == "teacher" %>
  <%= link_to 'Edit Course', edit_course_path(@course), class: "text-decoration-none" %>
  <%= link_to "Delete Course",
                  course_path(@course),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "text-decoration-none" %>
  <% end %>
</div>
