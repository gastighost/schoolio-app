<div class="container">
<h1>Your course</h1>

<br>
<h2><%= @course.subject %></h2>
<p><strong>Topic:</strong> <%= @course.topic %></p>
<p><strong>School Year:</strong> <%= @course.school_year %></p>
<p><strong>Performance Level Required:</strong> <%= @course.performance_level %></p>
<%= link_to "Go back to course list", courses_path %>
<%= link_to 'Edit Course', edit_course_path(@course) %>
<%= link_to "Delete Course",
                course_path(@course),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
</div>
