<div class="container mt-4">
<%= simple_form_for @course do |f| %>
  <%= f.input :subject, required: false %>
  <%= f.input :topic, required: false %>
  <%= f.input :school_year, required: false %>
  <%= f.input :performance_level, required: false %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Add course", class: "button-green" %>
<% end %>
  <%= link_to courses_path do %>
<svg xmlns="http://www.w3.org/2000/svg" class="icon_green_back" viewBox="0 0 16 16">
