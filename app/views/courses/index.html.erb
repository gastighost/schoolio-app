<div class="container-index-search">
<div class="col-sm-5 search-container">
<h1>Find a course</h1>
      <%= form_tag courses_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "ex. Grade 6 Mathematics"
        %>
        <%= button_tag type:"submit", class: "button-search" do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>


<%= link_to "Add a new course", new_course_path, class: "nav-link" %>
  <ul>
    <% @courses.each do |course| %>
    <div class="container py-3">
      <li><%= course.subject %></li>
      <li><%= course.topic %></li>
      <li><strong>School year:</strong> <%= course.school_year %></li>
      <li><strong>Performance Level Required:</strong> <%= course.performance_level %></li>
      <li><strong>Teacher:</strong> <%= User.find(course.user_id).name %></li>
      <%= link_to "Enter Course", course_path(course) %>
      <%= link_to 'Edit Course', edit_course_path(course) %>
      <%= link_to "Delete Course",
                  course_path(course),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </ul>
</div>
