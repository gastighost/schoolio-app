<div class="container">
<h1>Here is your list of courses</h1>

<%= link_to "Add a new course", new_course_path, class: "nav-link" %>
  <ul>
    <% @courses.each do |course| %>
    <div class="container py-3">
      <li><%= course.subject %></li>
      <li><%= course.topic %></li>
      <li><strong>School year:</strong> <%= course.school_year %></li>
      <li><strong>Performance Level Required:</strong> <%= course.performance_level %></li>
      <li><strong>Teacher:</strong> <%= User.find(course.user_id).name %></li>
      <%= link_to "Enter Course", course_path(course) %>
      <%= link_to 'Edit Course', edit_course_path(course) %>
      <%= link_to "Delete Course",
                  course_path(course),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </ul>
</div>
