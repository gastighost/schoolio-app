<div class="container" data-controller="refresh-list">
  <br>
    <div class="container-index-search">
      <div class="col-sm-5 search-container">
        <h1>Find a course</h1>
        <%= form_with url: courses_path, method: :get, html: { data: { refresh_list_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                     class: "form-control",
                     placeholder: 'ex. Grade 6 Mathematics',
                     value: params[:query],
                     data: {
                     refresh_list_target: 'searchInput',
                     action: "keyup->refresh-list#update"
                     } %>
        <% end %>
      </div>
    </div>
  <br>

  <%= link_to "All bookings", bookings_path, class: "button_green" %>

  <% if current_user.user_type == "teacher" %>
    <%= link_to new_course_path do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="plus_icon" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
      </svg>
    <% end %>
  <% end %>

  <%= render 'list', courses: @courses %>
</div>
